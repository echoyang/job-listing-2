<div id="myCarousel" class="carousel slide">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <a href="#">
                <img src="https://ww2.sinaimg.cn/large/006y8lVajw1fc0l0qzcq8j31kw0qbwyl.jpg" alt="First slide">
                <div class="carousel-caption"></div>
            </a>
        </div>
        <div class="item">
            <a href="#">
                <img src="https://ww4.sinaimg.cn/large/006y8lVajw1fc0l1f5gqjj31kw0qih23.jpg" alt="Second slide">
                <div class="carousel-caption"></div>
            </a>
        </div>
        <div class="item">
            <a href="#">
                <img src="https://ww1.sinaimg.cn/large/006y8lVagy1fc0l1rwrerj31kw0qf7wj.jpg" alt="Third slide">
                <div class="carousel-caption"></div>
            </a>
        </div>
    </div>

    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
<%= form_tag jobs_path, :method => "get" do %>
<div class="searchform">
    <%= text_field_tag :search, params[:search], placeholder: "搜索职位", class: "searchbox"%>
    <span>
        <%= submit_tag "搜索", :title => nil, :description => nil, class: "searchbotton" %>
        <!-- <input type="submit" value="点 击" class="mike"> -->
    </span>
</div>
<% end %>

<ul id="myTab" class="nav nav-tabs" role="tablist">
    <li class="">
        <a data-toggle="tab" href="#category-0">产品</a>
    </li>
    <li class="active">
        <a data-toggle="tab" href="#category-1">运营</a>
    </li>
    <li class="">
        <a data-toggle="tab" href="#category-3">技术</a>
    </li>
    <li class="">
        <a data-toggle="tab" href="#category-4">设计</a>
    </li>
    <li class="">
        <a data-toggle="tab" href="#category-5">市场</a>
    </li>
    <li class="">
        <a data-toggle="tab" href="#category-7">职能</a>
    </li>
</ul>

<div class="pull-right">
    <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
</div>
<div class="dropdown clearfix pull-right">
    <button class="btn btn-default drapdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
            <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
        </li>
        <li>
            <%= link_to("按照发表时间排序", jobs_path ) %>
        </li>
    </ul>
</div>
<table class="table table-boldered">
    <thead>
        <tr>
            <td>职缺</td>
            <td>薪资下限</td>
            <td>薪资上限</td>
            <td>刊登时间</td>
        </tr>
    </thead>
    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td>
                <%= link_to(job.title, job_path(job)) %>
            </td>
            <td>
                <%= job.wage_lower_bound %>
            </td>
            <td>
                <%= job.wage_upper_bound %>
            </td>
            <td>
                <%= job.created_at %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
